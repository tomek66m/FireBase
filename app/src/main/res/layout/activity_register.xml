<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        android:background="@color/backgroundColor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:background="@color/headerBackgroundGreen"
                android:fontFamily="@font/roboto"
                android:gravity="center_horizontal|center_vertical"
                android:text="Register Form"
                android:textColor="@color/headerRoundedWhite"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="9"
            android:weightSum="10"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            >

            <EditText
                android:id="@+id/nameTextForRegister"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/gray"
                android:ems="10"
                android:hint="Name"
                android:inputType="textPersonName"
                android:text=""
                android:textAlignment="center"
                android:layout_marginTop="10dp"

                />

            <EditText
                android:id="@+id/surnameTextForRegister"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/gray"
                android:ems="10"
                android:hint="Surname"
                android:inputType="textPersonName"
                android:text=""
                android:textAlignment="center"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/emailTextForRegister"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/gray"
                android:ems="10"
                android:hint="email@email.com"
                android:inputType="textEmailAddress"
                android:textAlignment="center"
                tools:text=""
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/passwordTextForRegister"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/gray"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:textAlignment="center"
                tools:text=""
                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/registerButton"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:background="@drawable/btn_rounded"
                android:fontFamily="@font/roboto"
                android:onClick="registerUser"
                android:text="Register"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:layout_marginHorizontal="60dp"/>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>